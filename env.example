# RAGnarok Environment Configuration Template
# Copy this file to .env and update the values as needed

# ===== DATABASE CONFIGURATION =====
DB_HOST=db
DB_PORT=5432
DB_NAME=ragnarok
DB_USER=postgres
DB_PASSWORD=postgres

# ===== OLLAMA CONFIGURATION =====
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# ===== SERVICE URLS =====
PDF_SERVICE_URL=http://document-processor:8001
REDIS_URL=redis://redis:6379

# ===== FILE STORAGE =====
UPLOAD_FOLDER=/app/uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
CHROMA_PERSIST_DIRECTORY=/app/chroma_db

# ===== PROCESSING LIMITS =====
MAX_CHUNK_SIZE=1000
MAX_CHUNKS=1000
MAX_CONTEXT_LENGTH=32000
DEFAULT_CONTEXT_LENGTH=8000
ADAPTIVE_CONTEXT_LENGTH=16000

# ===== OCR CONFIGURATION =====
OCR_DPI=300
OCR_LANGUAGE=eng

# ===== FRONTEND CONFIGURATION =====
REACT_APP_BACKEND_URL=http://localhost:8000

# ===== DEVELOPMENT OPTIONS =====
# Set to 'development' for debug mode
ENVIRONMENT=production

# Enable detailed logging
LOG_LEVEL=INFO

# ===== SECURITY (Production) =====
# Generate secure secret keys for production
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# ===== OPTIONAL INTEGRATIONS =====
# Uncomment and configure if using external services
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# GOOGLE_CLOUD_KEY=your-google-key
